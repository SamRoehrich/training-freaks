# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Upload

type Query {
	activity(name: String!): Activity
	activities: [Activity!]!
}

type Mutation {
	createActivity(input: ActivityInput!): Boolean
	joinWaitlist(input: WaitlistInput!): Boolean
}

type Activity {
	id: ID!
	name: String!
	details: String!
	type: String!
}

input ActivityInput {
	name: String!
	upload: Upload!
	category: String!
}

input WaitlistInput {
	email: String!
}
