# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
	activity(name: String!): Activity
}

type Mutation {
	createActivity(input: ActivityInput!): Activity
}

type Activity {
	id: ID!
	name: String!
	details: String!
	type: String!
}

input ActivityInput {
	name: String!
	details: String!
	category: String!
}
